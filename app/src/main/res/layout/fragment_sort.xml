<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_fenlei"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="#C7C7C7"
        android:gravity="center"
        android:hint="ðŸ”å•†å“æœç´¢ï¼Œå…±239æ¬¾å¥½ç‰©"
        app:layout_constraintTop_toTopOf="parent" />

    <q.rorbin.verticaltablayout.VerticalTabLayout
        android:id="@+id/tab_fenlei"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:tab_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cl"
        app:layout_constraintTop_toBottomOf="@id/et_fenlei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tab_mode="scrollable" />
    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="#D3D3D3"
        app:layout_constraintLeft_toRightOf="@id/tab_fenlei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cl"
        app:layout_constraintTop_toBottomOf="@id/aa"/>

    <View
        android:id="@+id/aa"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@id/et_fenlei"/>


    <ScrollView
        android:layout_margin="10dp"
        android:id="@+id/cl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/tab_fenlei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aa">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/iv_fenlei_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="123"
            android:id="@+id/tv_fenlei_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/iv_fenlei_img"
            app:layout_constraintRight_toRightOf="@id/iv_fenlei_img"
            app:layout_constraintTop_toTopOf="@id/iv_fenlei_img"
            app:layout_constraintBottom_toBottomOf="@id/iv_fenlei_img"
            android:textColor="@color/toolbar"
            android:textSize="18sp"/>

        <View
            android:id="@+id/hh"
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/iv_fenlei_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:background="#D3D3D3"/>
        <TextView
            android:background="@color/toolbar"
            android:id="@+id/tv_fenlei_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            app:layout_constraintTop_toBottomOf="@id/hh"
            app:layout_constraintBottom_toBottomOf="@id/hh"
            app:layout_constraintLeft_toLeftOf="@id/hh"
            app:layout_constraintRight_toRightOf="@id/hh"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rec_fenlei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hh"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>

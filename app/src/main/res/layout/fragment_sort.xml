<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_fenlei"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="#C7C7C7"
        android:gravity="center"
        android:hint="🔍商品搜索，共239款好物"
        app:layout_constraintTop_toTopOf="parent" />

    <q.rorbin.verticaltablayout.VerticalTabLayout
        android:id="@+id/tab_fenlei"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:tab_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_fenlei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tab_mode="scrollable" />
    <View
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="#D3D3D3"
        app:layout_constraintLeft_toRightOf="@id/tab_fenlei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aa"/>

    <View
        android:id="@+id/aa"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@id/et_fenlei"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/aa"
        app:layout_constraintLeft_toRightOf="@id/tab_fenlei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/iv_sort_img"
                    android:scaleType="fitStart"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"/>
                <TextView
                    android:text="123"
                    android:id="@+id/tv_sort_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/iv_sort_img"
                    app:layout_constraintBottom_toBottomOf="@id/iv_sort_img"
                    app:layout_constraintLeft_toLeftOf="@id/iv_sort_img"
                    app:layout_constraintRight_toRightOf="@id/iv_sort_img"
                    android:textColor="@color/toolbar"
                    android:textSize="18sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <View
                    android:background="@color/bg"
                    android:layout_width="30dp"
                    android:layout_height="0.5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_sort_title"
                    android:backgroundTint="#FF1717"/>
                <TextView
                    android:background="@color/toolbar"
                    android:id="@+id/tv_sort_title"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="1234"/>
                <View
                    android:background="@color/bg"
                    android:layout_width="30dp"
                    android:layout_height="0.5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_sort_title"
                    android:backgroundTint="#FF1717"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
           <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_sort"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

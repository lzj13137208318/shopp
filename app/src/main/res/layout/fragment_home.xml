<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
    <com.google.android.material.tabs.TabLayout
        android:background="@color/toolbar"
        android:id="@+id/tab_home"
        app:tabMode="scrollable"
        app:tabTextColor="#FF4A83"
        app:tabIndicatorHeight="0dp"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg"
            app:layout_constraintTop_toBottomOf="@id/tab_home"
            />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_direct"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/tab_home"
        android:textSize="20dp"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_shouye_direct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_direct"/>
    <TextView
        android:id="@+id/tv_yisi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/rec_shouye_direct"
        android:textSize="20dp"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_shouye_yisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_yisi"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg"
            app:layout_constraintTop_toBottomOf="@id/rec_shouye_yisi"/>
    <TextView
        android:layout_marginTop="15dp"
            android:id="@+id/tv_hot"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/rec_shouye_yisi"
            android:textSize="20dp"
            android:gravity="center"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@color/toolbar"
            android:id="@+id/rec_shouye_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_hot"/>
     <TextView
         android:background="@color/toolbar"
            android:id="@+id/tv_topic"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/rec_shouye_hot"
            android:textSize="20dp"
            android:gravity="center"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:background="@color/toolbar"
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dividerPadding="10dp"
            app:showDividers="none"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_topic">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_shouye_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:background="@color/toolbar"
            android:id="@+id/tv_livinghome"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/ll"
            android:textSize="20dp"
            android:text="123"
            android:gravity="center"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/toolbar"
            android:id="@+id/rec_shouye_livinghome"
            android:layout_width="match_parent"
            android:layout_height="860dp"
            app:layout_constraintTop_toBottomOf="@id/tv_livinghome"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

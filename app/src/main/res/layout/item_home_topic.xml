<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_topic"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="134"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_topic" />

    <TextView
        android:id="@+id/tv_item_topic_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="345"
        android:textColor="#ff0000"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_topic_title"
        app:layout_constraintTop_toTopOf="@id/tv_item_topic_title" />

    <TextView
        android:id="@+id/tv_item_topic_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:maxEms="13"
        android:text="567"
        android:textColor="#A0A0A0"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_topic_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_item_direct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_item_direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_item_direct"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_direct"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_direct"
        app:layout_constraintRight_toRightOf="@id/iv_item_direct"
        android:textColor="@color/toolbar"/>

</androidx.constraintlayout.widget.ConstraintLayout>
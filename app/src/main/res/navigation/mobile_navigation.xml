<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.shopping.fragment.HomeFragment"
        android:label="@string/shop_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_topic"
        android:name="com.example.shopping.fragment.SpecialFragment"
        android:label="@string/shop_topic"
        tools:layout="@layout/fragment_topic" />

    <fragment
        android:id="@+id/navigation_sort"
        android:name="com.example.shopping.fragment.SortFragment"
        android:label="@string/shop_sort"
        tools:layout="@layout/fragment_sort" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.shopping.fragment.CartFragment"
        android:label="@string/shop_cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.shopping.fragment.MeFragment"
        android:label="@string/shop_me"
        tools:layout="@layout/fragment_me" />
</navigation>